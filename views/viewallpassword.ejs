<html>

<head>
    <title></title>
    <link rel="stylesheet" href="/stylesheets/boosttrap/bootstrap.css"/>
    <script src="/javascripts/jquery.js"></script>
    <script src="/stylesheets/boosttrap/bootstrap_jquery.js"></script>
    <script src="/stylesheets/boosttrap/bootstrap_min.js"></script>
    <link rel='stylesheet' href='/stylesheets/home.css' />
    <link rel='stylesheet' href='/stylesheets/addnewcategory.css' />
    <link rel='stylesheet' href="/stylesheets/viewallcategory.css"/>
    <link rel='stylesheet' href="/stylesheets/viewallpassword.css"/>
    
</head>

<body>

    <div id="navigation">
        <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="#">Password Category</a>
                <ul>
                    <li><a href="/addnewcategory">Add New Category</a> </li>
                    <li><a href="/viewallcategory">View All Category</a> </li>
                </ul>

            </li>
            <li><a href="#">Password Details</a>
                <ul>
                    <li><a href="/addnewpassword">Add New Password</a> </li>
                    <li><a href="/viewallpassword">View All Password </a> </li>

                </ul>

            </li>
        </ul>

        <span ><form method="POST" action="/logout"><input type="submit" style="height: 30px;position: absolute;top: -3; right: 5px; font-size: 13px;" class="ubtn" value="Logout"> </form></span>
        <img src="/images/meta-og-image.png">

    </div>


    <div id="dashboad-container" style="height: 500px;">

        <div id="div1">
            <h2>view password list</h2>
            <form>
                <table id="table-content">
                    <thead>
                        <tr>
                            <th>Password Category Name </th>
                            <th>password Details</th>
                            <th>Action</th>

                        </tr>
                    <tbody>
                        <% if(records.length > 0) { %>
                            <% records.forEach(function(row){ %>
                        <tr>
                            <td><%= row.category_name %></td>
                            <td><button type="button" style="height: 30px;width: 23%;outline: none;" class="btn btn-info btn-lg " data-toggle="modal" data-target="#myModal<%= row._id %>"><img style="height: 25px;width: 21px;position: relative; left: -2px; top:-8px " src="/images/eye.png"  ></button></td>
                            <td><a href="/edit_password/<%= row._id %>"><img class="img1" src="/images/icons8-edit-property-52.png"></a><a href="/delete_password/<%= row._id %>" onclick="return confirm('are you sure?')" ><img class="img1"  src="/images/delete.png"></a></td>
                        </tr>
                        <div class="modal fade" id="myModal<%= row._id %>" role="dialog">
                            <div class="modal-dialog">
                            
                              <!-- Modal content-->
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                                  <h4 class="modal-title" style="color: black;"><%= row.category_name %></h4>
                                </div>
                                <div class="modal-body" style="color: black;">
                                  <%- row.password_details %>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                              </div>
                              
                            </div>
                          </div>
                        
                        <% }) %>
                        <% }else{ %>
                            <tr>
                                <td colspan="3">Details Not Found </td>
                                </tr>
                        <% } %>
                    </tbody>
                    </thead>
                </table>
               
                  
                           


            </form>
        </div>
        <% if(records.length > 0) { %>
        <%if(current!=1){%>
            <a href="/viewallpassword/<%= Number(current)-1 %>" class="ubtn link prev">previous</a><%}%>
            <%if(current!=pages){%>
            <a href="/viewallpassword/<%= Number(current)+1 %>" class="ubtn link next">next</a> <%}%>
        <%}%>
    </div>



    <script src="/javascripts/home.js"></script>
</body>

</html>